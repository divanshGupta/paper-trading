}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <-- prisma reads this fron .env
}


// ------- Models -------

// User model
model User {
  id          Int          @id @default(autoincrement())
  username    String       @unique
  email       String       @unique
  password    String
  balance     Decimal      @default(100000.00)
  createdAt   DateTime     @default(now())
  portfolio   Portfolio[]
  transactions Transaction[]
  watchlist   Watchlist[]
  refreshTokens RefreshToken[]
}

// Portfolio: current holdings
model Portfolio {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  symbol    String
  quantity  Int
  avgPrice  Decimal
  updatedAt DateTime @default(now())
}

// Each trade (buy/sell)
model Transaction {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  symbol    String
  type      String   // "BUY" or "SELL"
  quantity  Int
  price     Decimal
  total     Decimal
  createdAt DateTime @default(now())
}

// Watchlist for each user
model Watchlist {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  symbol String
}

// Refresh tokens for authentication
model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}
