}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

// ------- Models -------

// User model
model User {
  id          Int       @id @default(autoincrement())
  supabaseId  String    @unique @db.Uuid
  email       String    @unique
  balance     Decimal   @default(100000) @db.Decimal(12,2)
  name        String?
  phone       String?   @unique
  dob         DateTime?
  gender      String?   // "male", "female", "other"
  address     String?
  fatherName  String?
  createdAt   DateTime  @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@schema("public")
}

// Portfolio: current holdings
model Portfolio {
  id        Int      @id @default(autoincrement())
  userId    String   @db.Uuid
  symbol    String
  quantity  Int
  avgPrice  Decimal @db.Decimal(12,2)
  updatedAt DateTime @default(now())

  @@schema("public")

}

// Each trade (buy/sell)
model Transaction {
  id          Int      @id @default(autoincrement())
  userId      String   @db.Uuid
  symbol      String
  type        String
  quantity    Int
  price       Decimal  @db.Decimal(10,2)
  total       Decimal  @db.Decimal(10,2)
  realizedPnl Decimal? @db.Decimal(10,2)

  createdAt   DateTime @default(now())

  @@schema("public")
}



// Watchlist for each user
model Watchlist {
  id     Int    @id @default(autoincrement())
  userId String @db.Uuid
  symbol String

  @@schema("public")
}

